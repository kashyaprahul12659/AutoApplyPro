# =================================
# AutoApply Pro - Environment Variables
# =================================
# Copy this file to .env and update the values

# =================================
# Server Configuration
# =================================
NODE_ENV=development
PORT=5000

# =================================
# Database Configuration
# =================================
MONGODB_URI=mongodb://localhost:27017/autoapply-pro

# =================================
# JWT Configuration
# =================================
JWT_SECRET=your_super_secure_jwt_secret_key_here_make_it_long_and_random
JWT_EXPIRE=30d

# =================================
# File Upload Configuration
# =================================
FILE_UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880  # 5MB in bytes

# =================================
# OpenAI API Configuration
# =================================
OPENAI_API_KEY=your_openai_api_key_here

# =================================
# Razorpay Configuration
# =================================
RAZORPAY_KEY_ID=your_razorpay_key_id_here
RAZORPAY_SECRET=your_razorpay_secret_here

# =================================
# Clerk Configuration
# =================================
CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_publishable_key_here
CLERK_SECRET_KEY=sk_test_your_clerk_secret_key_here

# =================================
# Admin Configuration
# =================================
ADMIN_EMAILS=admin@autoapplypro.tech,dev@autoapplypro.tech

# =================================
# CORS Configuration
# =================================
CORS_ORIGIN=http://localhost:3000,https://autoapplypro.tech,https://www.autoapplypro.tech

# =================================
# Logging Configuration
# =================================
LOG_LEVEL=info  # debug, info, warn, error
LOG_MAX_FILES=30d
LOG_MAX_SIZE=20m

# =================================
# Cache Configuration
# =================================
CACHE_ENABLED=true
CACHE_TTL_SHORT=300      # 5 minutes
CACHE_TTL_MEDIUM=1800    # 30 minutes
CACHE_TTL_LONG=7200      # 2 hours

# =================================
# Rate Limiting Configuration
# =================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW=900000     # 15 minutes in ms
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5
UPLOAD_RATE_LIMIT_MAX=20
AI_RATE_LIMIT_MAX=10

# =================================
# Security Configuration
# =================================
BCRYPT_ROUNDS=12
ACCOUNT_LOCKOUT_ATTEMPTS=5
ACCOUNT_LOCKOUT_TIME=7200000  # 2 hours in ms

# =================================
# Email Configuration (Optional)
# =================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# =================================
# Monitoring Configuration (Optional)
# =================================
# SENTRY_DSN=your_sentry_dsn_here
# NEW_RELIC_LICENSE_KEY=your_new_relic_key_here

# =================================
# Development Configuration
# =================================
# Only set these in development
DEV_MODE=true
DEBUG_LOGGING=true
DISABLE_AUTH_FOR_TESTING=false

# =================================
# Production Configuration
# =================================
# Only set these in production
# SESSION_SECRET=your_session_secret_here
# TRUST_PROXY=true
# FORCE_HTTPS=true
